@model Pelicula
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header bg-warning text-white">
        Crear Pelicula
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Peliculas" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Título</label>
                <input type="text" class="form-control" asp-for="Titulo" autocomplete="off">
            </div>
            <div class="mb-3">
                <label class="form-label">Género</label>
                <input type="text" class="form-control" asp-for="Genero" autocomplete="off">
            </div>
            <div class="mb-3">
                <label class="form-label">Año</label>
                <input type="text" class="form-control" asp-for="FechaEstreno" autocomplete="off">
            </div>
            <div class="mb-3">
                <input type="file" class="form-control" name="Imagen">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" asp-controller="Peliculas" class="btn btn-warning">Volver a lista</a>
        </form>
    </div>
</div>
