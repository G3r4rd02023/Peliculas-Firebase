@model List<Pelicula>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-warning text-white">
        Lista de peliculas
    </div>
    <div class="card-body">
        <a asp-action="Create" asp-controller="Peliculas" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead class="table-warning text-white">
                <tr>
                    <th>Título</th>
                    <th>Género</th>
                    <th>Año</th>
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titulo</td>
                        <td>@item.Genero</td>
                        <td>@item.FechaEstreno</td>
                        <td>
                            <img src="@item.URLImagen" width="100" height="100">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>